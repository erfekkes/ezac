            '#weight' => 11,
            '#tree' => TRUE,
            );
         }

        //submit
        $form['submit'] = array(
        '#type' => 'submit',
        '#description' => t('Opslaan'),
        '#value' => t('Opslaan'),
        '#weight' => 99,
        );
    }

  return $form;
}

