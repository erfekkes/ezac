  // find ezac_Leden Afkorting for logged-in user
  global $jaar_default;
  global $maand_default;
  global $datum_default;
  // @TODO sanitize $datum
  
  $starts = ezacstart_get_starts(null, $datum_default, $afkorting); 
  //display results
  if (isset($starts)) {
    $title = ($afkorting <> null)? 'Jouw starts voor ' : 'Alle starts voor ';
    $datum_label = ezac_show_date($datum_default);
    $output = ezacstart_display("$title $datum_label", $starts, DETAILS);
  }
  $form = ezacstart_form_datum($form, $form_state, $datum_default);
  if (isset($output)) {
    return array_merge($output, $form);
  }
  else return $form;
}

